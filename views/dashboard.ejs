<%- include("partials/header") %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">
        <% if(locals.currentFilter && currentFilter !== 'All') { %>
            <%= currentFilter %> Items
        <% } else { %>
            Latest Items
        <% } %>
    </h2>
    
    <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            Filter: <%= locals.currentFilter || 'All' %>
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/dashboard">All</a></li>
            <li><a class="dropdown-item" href="/dashboard?status=Lost">Lost</a></li>
            <li><a class="dropdown-item" href="/dashboard?status=Found">Found</a></li>
        </ul>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% items.forEach(item => { %>
        <div class="col">
            <div class="card h-100 glass-card border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge rounded-pill <%= item.status === 'Lost' ? 'bg-danger' : (item.status === 'Found' ? 'bg-success' : 'bg-warning text-dark') %>">
                            <%= item.status %>
                        </span>
                        <small class="text-secondary"><%= new Date(item.createdAt).toLocaleDateString() %></small>
                    </div>
                    
                    <h5 class="card-title fw-bold"><%= item.title %></h5>
                    <p class="card-text text-secondary small mb-2">
                        <i class="bi bi-geo-alt-fill text-primary"></i> <%= item.location %>
                    </p>
                    <p class="card-text"><%= item.description %></p>
                </div>
                
                <div class="card-footer bg-transparent border-top-0 pb-3">
                    <% if(currentUser && item.postedBy.toString() === currentUser._id.toString()) { %>
                        <button class="btn btn-light w-100 disabled" style="opacity: 0.7;">My Post</button>
                    <% } else if (item.status === "Resolved") { %>
                        <button class="btn btn-secondary w-100 disabled">Resolved</button>
                    <% } else { %>
                        <form action="/items/<%= item._id %>/claim" method="POST">
                            <button type="submit" class="btn btn-outline-primary w-100">
                                <i class="bi bi-hand-index-thumb"></i> Claim / Contact
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<% if(items.length === 0) { %>
    <div class="text-center py-5 text-secondary">
        <i class="bi bi-box-seam display-1"></i>
        <p class="mt-3">No items found.</p>
    </div>
<% } %>

<%- include("partials/footer") %>